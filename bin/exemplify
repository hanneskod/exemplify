#!/usr/bin/env php
<?php

$files = array(
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php'
);

$found = false;

foreach ($files as $file) {
    if (file_exists($file)) {
        require $file;
        $found = true;
        break;
    }
}

if (!$found) {
    die('Autoloader not found.');
}

$application = new hanneskod\exemplify\Console\Application();
$application->run();
